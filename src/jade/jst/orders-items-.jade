each item in order.items
  .pure-g
    .pure-u-1-3
      .col-box
        a(href='detail/?id=#{item.id}')
          .img-box.pull-center
            .square
              .square-inner
                .lazy-box.unloaded
                  img.lazy(data-original=item.image||false)
    .pure-u-2-3
      .col-box.desc-box
        div= item.title
        div
          span.price ï¿¥#{item.price.toFixed(2)}
          i.fa.fa-times
          span= item.num
